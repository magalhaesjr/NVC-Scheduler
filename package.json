{
  "name": "NVC-Scheduler",
  "productName": "NVC-Scheduler",
  "version": "1.1.7",
  "description": "Creates NVC Schedules",
  "main": "main.js",
  "repository": "https://github.com/magalhaesjr/NVC-Scheduler",
  "author": "Jeff Magalhaes",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "munkres-js": "^1.2.2",
    "readable-stream": "^2.3.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "electron-winstaller": "^3.0.4"
  },
  "scripts": {
    "start": "set ISDEV=true&& electron .",
    "dist-win": "electron-builder --win",
    "dist-linux": "electron-builder --linux",
    "dist-mac": "electron-builder --mac"
  },
  "build": {
    "extraResources": [
      "./extraResources/**"
    ],
    "appId": "nvc.scheduler.app",
    "npmRebuild": false,
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/nvc.ico",
      "publisherName": "JeffMagalhaes",
      "certificateFile": "JeffMagalhaes.pfx"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "deb",
      "icon": "assets/icons/linux/nvc.png",
      "maintainer": "Jeff Magalhaes",
      "executableName": "nvc-scheduler"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icons/mac/nvc.icns",
      "type": "development"
    }
  }
}
