{
  "name": "NVC-Scheduler",
  "productName": "NVC-Scheduler",
  "version": "1.0.0",
  "description": "Creates NVC Schedules",
  "main": "main.js",
  "repository": "https://github.com/magalhaesjr/NVC-Scheduler",
  "author": "Jeff Magalhaes",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "munkres-js": "^1.2.2",
    "nedb": "^1.8.0",
    "nodegit": "^0.24.1",
    "xlsx": "^0.14.1"
  },
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-packager": "^13.0.1",
    "electron-winstaller": "^3.0.4"
  },
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/nvc.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . NVC-Scheduler --overwrite --platform=win32 --arch=x64 --icon=assets/icons/win/nvc.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"NVC-Scheduler\"",
    "package-linux": "electron-packager . NVC-Scheduler --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/linx/nvc.png --prune=true --out=release-builds",
    "create-installer-win": "node installers/windows/createinstaller.js"
  },
  "build": {
    "extraResources": [
      "./extraResources/**"
    ]
  }
}
