{
  "name": "NVC-Scheduler",
  "productName": "NVC-Scheduler",
  "version": "1.1.1",
  "description": "Creates NVC Schedules",
  "main": "main.js",
  "repository": "https://github.com/magalhaesjr/NVC-Scheduler",
  "author": "Jeff Magalhaes",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "munkres-js": "^1.2.2",
    "nedb": "^1.8.0",
    "xlsx": "^0.14.1"
  },
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "electron-winstaller": "^3.0.4",
    "nodegit": "^0.24.1"
  },
  "scripts": {
    "start": "set ISDEV=true&& electron .",
    "dist-win": "electron-builder --win",
    "dist-linux": "electron-builder --linux",
    "dist-mac": "electron-builder --mac"
  },
  "build": {
    "extraResources": [
      "./extraResources/**"
    ],
    "appId": "nvc.scheduler.app",
    "npmRebuild": false,
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/nvc.ico",
      "certificateFile":"C:/users/Jeff/nvcscheduler.pfx",
      "certificatePassword": "NVCScheduler",
      "publisherName": "JeffMagalhaes"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux":{
      "target":"deb",
      "icon": "assets/icons/linux/nvc.png",
      "maintainer": "Jeff Magalhaes",
      "executableName": "nvc-scheduler"
    },
    "mac":{
      "target":"dmg",
      "category": "public.app-category.utilities",
      "icon": "assets/icons/mac/nvc.icns",
      "type": "development"
    }
  }
}
